/* Date variables for campaign content */

var @date1
set @date1 = AttributeValue("MigrationDate")
set @migrationDate = Concat("<span class='var-placeholder' style='white-space:nowrap'>",FormatDate(@date1, @languageLocalFormat, " ", @languageCode),"</span>")
]%%--->